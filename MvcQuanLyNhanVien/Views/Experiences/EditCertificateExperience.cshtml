@model MvcQuanLyNhanVien.Models.Certificate

@{
    ViewData["Title"] = "EditCertificateExperience";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa</h1>

<h4>Bằng cấp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCertificateExperience">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CertificateId"/>
            <div class="form-group">
                <label asp-for="CertificateName" class="control-label"></label>
                <input asp-for="CertificateName" class="form-control" />
                <span asp-validation-for="CertificateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateRank" class="control-label"></label>
                <input asp-for="CertificateRank" class="form-control" />
                <span asp-validation-for="CertificateRank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DetailsExperience" asp-route-id="@Model.Id">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

